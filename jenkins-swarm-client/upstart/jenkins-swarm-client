description "Jenkins Swarm client"

start on runlevel [2345]
stop on runlevel [!2345]

respawn

setuid jenkins
setgid jenkins

script
    set -a
    [ -f /etc/default/jenkins-swarm-client ] && . /etc/default/jenkins-swarm-client
    chdir /var/lib/jenkins-swarm-client

    exec /usr/bin/jenkins-swarm-client
end script
